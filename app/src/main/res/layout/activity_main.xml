<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity"
	android:background="@color/background">

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/main_activity_text"
		android:textColor="@color/white"
		android:textSize="35sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.961" />

	<ImageView
		android:id="@+id/demonGod"
		android:layout_width="210dp"
		android:layout_height="213dp"
		android:contentDescription="demonGod"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.079"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.03"
		app:srcCompat="@drawable/dios_demonio" />

	<ImageButton
		android:id="@+id/imageButton"
		android:layout_width="314dp"
		android:layout_height="257dp"
		android:layout_marginStart="120dp"
		android:background="@android:color/transparent"
		android:contentDescription="mettaton"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.356"
		app:srcCompat="@drawable/mettaton_animation" />

	<ImageView
		android:id="@+id/noteImage"
		android:layout_width="149dp"
		android:layout_height="144dp"
		android:contentDescription="note"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.802"
		app:srcCompat="@drawable/note" />


</androidx.constraintlayout.widget.ConstraintLayout>